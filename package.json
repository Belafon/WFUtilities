{
  "name": "wfnodeserver",
  "version": "1.0.23",
  "description": "Node server library for WorldsFactory",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "yarn ts-node src/server.ts",
    "dev:watch": "yarn nodemon --watch 'src/**/*.ts' --exec 'yarn ts-node' src/server.ts",
    "build": "npm run tsc && npm run copy-files",
    "tsc": "npx tsc",
    "copy-files": "mkdir -p dist/api/swagger && cp src/api/swagger/openapi.yaml dist/api/swagger/",
    "test": "npx mocha -r ts-node/register --ui tdd src/tests/**/*.test.ts",
    "test:watch": "yarn mocha -r ts-node/register --ui tdd --watch --watch-files src/**/*.ts src/tests/**/*.test.ts",
    "prepare": "npm run build",
    "example:basic": "yarn ts-node examples/library-usage.ts",
    "example:advanced": "yarn ts-node examples/advanced-usage.ts",
    "link-local": "./scripts/link-library.sh",
    "publish:patch": "./scripts/publish.sh patch",
    "publish:minor": "./scripts/publish.sh minor",
    "publish:major": "./scripts/publish.sh major",
    "prepublishOnly": "npm test && npm run build"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.1",
    "@types/helmet": "^4.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mocha": "^10.0.10",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.15.17",
    "@types/sinon": "^17.0.4",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "mocha": "^11.2.2",
    "nodemon": "^3.1.10",
    "sinon": "^20.0.0",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.15.0",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0"
  }
}
